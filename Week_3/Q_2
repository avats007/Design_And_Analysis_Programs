#include<iostream>
using namespace std; 
int main()
{
int arr[100]; int n,key,c=0;
cout<<"Enter total number of elements in array"<<endl;
cin>>n;
for(int i=0;i<n;i++)
{
cin>>arr[i];
}
for(int k=n-1;k>=0;k--)
{
   int i=0; int j=k-1; 
   while(i<j)
  {
      if(arr[i]+arr[j]==arr[k])
     {
       cout<<i<<","<<j<<","<<k<<endl; 
       break;
     }
     else if(arr[i]+arr[j]>arr[k]) 
       j--;
     else
       i++;
  }
}

return 0;
}

